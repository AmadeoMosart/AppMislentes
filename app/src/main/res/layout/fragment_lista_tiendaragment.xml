<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".Vista.ViewContenedorPrincipal.FragmenPrincipal.FragmenteTienda.ListaLentesTienda.ListaTiendaragment">
    <!-- TODO: Update blank fragment layout -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/longitud5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgListaTienda"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/atras" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/edtResultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anteojos"
                    android:textColor="@color/colorprimario"
                    android:textSize="30dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgFiltro"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/busqueda" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Switch
                android:id="@+id/switestado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:shadowColor="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible para probar en casa"
                android:textSize="15sp" />
        </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaTienda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>